//|   LOOKAHEAD(2) Expression() "." "length"
//|   LOOKAHEAD(2) Expression() "." Identifier() "(" ( Expression() ( "," Expression() )* )? ")"


}


String Identifier() : {
	Token i;
}
{
	i = <IDENTIFIER>
	{ return i.image; }
}
